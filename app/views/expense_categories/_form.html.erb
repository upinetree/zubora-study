<%= form_for(@expense_category) do |f| %>
  <% if @expense_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('message.error.invalid_input') %></h2>

      <ul>
      <% @expense_category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.text_field :color, size: 40 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
